<div id="projects" class="transitions-enabled">
  <% @projects.each do |project| %>
    <div class="box panel panel-default">
      <%= link_to image_tag(project.finished_image.url(:medium)), project %>
      <div class="panel-body">
        <h4><%= project.name %></h4>
        <p><strong><%= project.user.username if project.user %></strong></p>
        <% if current_user && project.user == current_user %>
        <%= link_to edit_project_path(project) do %>
              <span class="glyphicon glyphicon-edit"></span>
              Edit
            <% end %>
        <%= link_to project, method: :delete, data: { confirm: 'Are you sure?' } do %>
              <span class="glyphicon glyphicon-trash"></span>
              Delete
            <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
<div class="center">
   <%= will_paginate @posts, renderer: BootstrapPagination::Rails %>
</div>